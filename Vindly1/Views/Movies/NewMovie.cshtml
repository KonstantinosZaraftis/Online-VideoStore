@model Vindly1.ViewModel.CustomerMovieViewModel
@{
    ViewBag.Title = "NewMovie";
}
<div class="form-group">
    <h2 class=form-group>NewMovie</h2>
</div>


@using (@Html.BeginForm("CreateNewMovie","Movies"))
{  
<div class="form-group">
    @Html.HiddenFor(c=>c.Movie.Id)
    @*//<input type="hidden" name="Id" value="@Model.Id" />*@
    <div class="form-group">
        @Html.LabelFor(c => c.Movie.Name, new { @class = "control-label" })
        @Html.TextBoxFor(c => c.Movie.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Movie.Name)
    </div>

    <div class="form-group">

        @Html.CheckBoxFor(c => c.Movie.IsRental) IsRental
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Movie.Customer, new { @class = "control-label" })
        @Html.DropDownListFor(c => c.Movie.CustomerId, new SelectList(Model.Customers, "Id", "Name"), "Select Customer", new { @class = "form-control" })

    </div>

    <div class="form-group">
        <button type="submit" class="btn bth-primary"><i class="fa-sharp fa-solid fa-server"></i> Create</button>
    </div>

    <br />
    <div class="form-group">

        @Html.ActionLink("Back to Movies", "Index")
    </div>
</div>




}

