
@model Vindly1.ViewModel.NewCustomerViewModel
@{
    ViewBag.Title = "New";

}
<div class="form-horizontal">
    <h2 class="row">Create New Customer</h2>
</div>


@using (@Html.BeginForm("Create", "Customers"))
{
       
<div class="form-horizontal">
   
    <div class="form-group">

        @Html.LabelFor(c => c.Customer.Name, new { @class = "control-label" })

        @Html.TextBoxFor(c => c.Customer.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.Name)

    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Customer.Birthdate, new { @class = "control-label" })
        @Html.TextBoxFor(c => c.Customer.Birthdate, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.Birthdate)
    </div>

    <div class="form-group">
        <label>
            @Html.CheckBoxFor(c => c.Customer.IsSubscidedToNewsletter) Is Subscribed To Newsletter
        </label>
        <br />
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Customer.MembershipTypeId)
        @Html.DropDownListFor(c => c.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select MemberShipType", new { @class = "form-control" })
    </div>
    <br />
    <div class="form-group">
        <button type="submit" class="btn btn-primary"><i class="fa-sharp fa-solid fa-server"></i>  Create</button>

    </div>

    <br />
    <div class="form-group">

        @Html.ActionLink("Back to Customers", "Index")
    </div>
</div>



}



@section scripts
   {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
}